  <!-- Enhanced JavaScript for modals -->
  <script>
    const modalData = {
      1: {
        title: "Complicité",
        subtitle: "Une relation transformée avec Max",
        text: "Grâce aux cours d'éducation positive d'EduCanin, Sophie et Max ont développé une complicité extraordinaire. Les méthodes douces et respectueuses ont permis à Max, un berger allemand de 2 ans, de canaliser son énergie tout en renforçant sa confiance en sa maîtresse.",
        testimonial: "EduCanin a complètement transformé ma relation avec Max. Il est maintenant plus calme, plus attentif et surtout, nous nous comprenons parfaitement ! Les éducateurs sont formidables et les méthodes vraiment efficaces.",
        author: "Sophie M. et Max",
        icon: "fas fa-heart",
        headerClass: "gradient-bg",
        details: [
          { icon: "fas fa-calendar-alt", title: "Durée du programme", value: "3 mois de cours hebdomadaires" },
          { icon: "fas fa-trophy", title: "Résultats", value: "Obéissance parfaite au rappel" },
          { icon: "fas fa-star", title: "Niveau", value: "Débutant → Confirmé" },
          { icon: "fas fa-dog", title: "Race", value: "Berger Allemand, 2 ans" }
        ]
      },
      2: {
        title: "Aventure",
        subtitle: "L'agility, une passion partagée",
        text: "Marc et Luna ont découvert l'agility chez EduCanin il y a un an. Cette border collie énergique a trouvé son équilibre grâce à cette discipline qui allie technique, complicité et plaisir. Aujourd'hui, ils participent même à des compétitions régionales !",
        testimonial: "Luna était hyperactive et difficile à canaliser. L'agility a été la solution parfaite ! Elle s'épanouit complètement et moi je prends autant de plaisir qu'elle. Nous formons maintenant une vraie équipe !",
        author: "Marc D. et Luna",
        icon: "fas fa-running",
        headerClass: "bg-gradient-to-br from-green-400 to-blue-500",
        details: [
          { icon: "fas fa-stopwatch", title: "Meilleur temps", value: "45 secondes sur parcours" },
          { icon: "fas fa-medal", title: "Compétitions", value: "3 podiums en région" },
          { icon: "fas fa-chart-line", title: "Progression", value: "Niveau compétition en 8 mois" },
          { icon: "fas fa-dog", title: "Race", value: "Border Collie, 3 ans" }
        ]
      },
      3: {
        title: "Socialisation",
        subtitle: "Rocky apprend à vivre en société",
        text: "Rocky, un adorable golden retriever de la famille Dubois, était très timide avec les autres chiens et les humains. Grâce aux ateliers de socialisation d'EduCanin, il a appris à interagir sereinement et est devenu le chien sociable et équilibré qu'il est aujourd'hui.",
        testimonial: "Rocky était craintif et se cachait dès qu'il voyait d'autres chiens. Maintenant, il joue avec tous les chiens du quartier et adore rencontrer de nouvelles personnes. C'est un vrai miracle !",
        author: "Famille Dubois et Rocky",
        icon: "fas fa-users",
        headerClass: "bg-gradient-to-br from-purple-400 to-pink-500",
        details: [
          { icon: "fas fa-heart", title: "Transformation", value: "De timide à sociable" },
          { icon: "fas fa-users", title: "Amis canins", value: "Plus de 20 nouveaux amis" },
          { icon: "fas fa-calendar", title: "Durée", value: "6 mois d'ateliers" },
          { icon: "fas fa-dog", title: "Race", value: "Golden Retriever, 18 mois" }
        ]
      }
    };

    function openModal(id) {
      const data = modalData[id];
      const modal = document.getElementById("modal");

      // Update modal content
      document.getElementById("modal-title").innerText = data.title;
      document.getElementById("modal-subtitle").innerText = data.subtitle;
      document.getElementById("modal-text").innerText = data.text;
      document.getElementById("modal-testimonial").innerText = data.testimonial;
      document.getElementById("modal-author").innerText = data.author;
      document.getElementById("modal-icon").className = data.icon + " text-3xl mb-2";

      // Update header background
      const header = document.getElementById("modal-header");
      header.className = "h-32 " + data.headerClass + " flex items-center justify-center";

      // Update details section
      const detailsContainer = document.getElementById("modal-details");
      detailsContainer.innerHTML = data.details.map(detail => `
        <div class="bg-white p-4 rounded-lg shadow border">
          <div class="flex items-center space-x-3">
            <i class="${detail.icon} text-indigo-500 text-xl"></i>
            <div>
              <p class="text-sm text-gray-600 font-medium">${detail.title}</p>
              <p class="text-gray-800 font-semibold">${detail.value}</p>
            </div>
          </div>
        </div>
      `).join('');

      // Show modal
      modal.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    }

    function closeModal() {
      document.getElementById("modal").classList.add("hidden");
      document.body.style.overflow = "auto";
    }

    // Close modal when clicking outside
    document.getElementById("modal").addEventListener("click", function (e) {
      if (e.target === this) {
        closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape") {
        closeModal();
      }
    });

    document.getElementById("mobile-menu-btn").addEventListener("click", function () {
      const menu = document.getElementById("mobile-menu");
      menu.classList.toggle("hidden");
    });
  </script>
</body>

