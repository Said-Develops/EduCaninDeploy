      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4">
        <div class="flex flex-col space-y-4">
          <a href="#services"
            class="text-gray-700 hover:text-indigo-500 font-medium py-2 px-4 rounded hover:bg-white/50 transition">Services</a>
          <a href="#portfolio"
            class="text-gray-700 hover:text-indigo-500 font-medium py-2 px-4 rounded hover:bg-white/50 transition">Portfolio</a>
          <a href="#team"
